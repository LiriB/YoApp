<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YoApp.Clients.Pages.Setup.CompletePage"
             NavigationPage.HasNavigationBar="False"
             Title="Setup complete">
    <AbsoluteLayout x:Name="TopLayout">
        <Grid x:Name="GridBackground"
              AbsoluteLayout.LayoutFlags="All"
              AbsoluteLayout.LayoutBounds="0, 0, 1, 1" >
            <Image Grid.Row="0" 
                   x:Name="GradientBackground"
                   Aspect="AspectFill"
                   AnchorX="0.5" AnchorY="0.5"
                   Scale="1.5"
                   Opacity="0.85"
                   Source="rgb_gradient_radial.png" />
            <Image Grid.Row="0" 
                   x:Name="OverlayBackground"
                   Aspect="AspectFill"
                   Source="setup_finished_backdrop.png" />
        </Grid>

        <Grid x:Name="GridContainer"
              AbsoluteLayout.LayoutFlags="All"
              AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
              HorizontalOptions="Center">
            <Grid.Padding>
                <OnPlatform x:TypeArguments="Thickness">
                    <On Platform="Android" Value="35, 15, 35, 0" />
                    <On Platform="iOS" Value="35, 25, 35, 0" />
                </OnPlatform>
            </Grid.Padding>

            <Grid.RowDefinitions>
                <RowDefinition Height="AUTO" />
                <RowDefinition Height="*" />
                <RowDefinition Height="AUTO" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="AUTO" />
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" 
                   Margin="0, 10, 0, 5"
                   FontSize="28" 
                   TextColor="White"
                   HorizontalTextAlignment="Center"
                   HorizontalOptions="Center"
                   Text="{Binding Topic}" />

            <Label Grid.Row="1"
                   Margin="0, 0, 0, 10"
                   FontSize="20"
                   TextColor="White"
                   HorizontalTextAlignment="Center"
                   VerticalOptions="EndAndExpand"
                   Text="Now enjoy YoApp for free and chat with all your friends." />

            <Button x:Name="ButtonFinish"
                    Grid.Row="2"
                    Margin="0, 0, 0, 30"
                    HorizontalOptions="Center"
                    Command="{Binding FinishCommand}"
                    BackgroundColor="DodgerBlue"
                    TextColor="White"
                    BorderColor="Transparent"
                    Text="Finish Setup" />
        </Grid>
    </AbsoluteLayout>
</ContentPage>