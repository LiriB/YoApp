<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:behaviors="clr-namespace:YoApp.Clients.Behaviors"
             xmlns:helpers="clr-namespace:YoApp.Clients.Helpers"
             x:Class="YoApp.Clients.Pages.Settings.UserDetailsPage"
             Title="{Binding Nickname}"
             NavigationPage.HasBackButton="True"
             NavigationPage.HasNavigationBar="True">
  <StackLayout>
    <Entry Text="{Binding Nickname}">
      <Entry.Behaviors>
        <behaviors:EntryLengthClamp 
          MaxLength="{x:Static helpers:Settings+UserConventions.NicknameMaxLength}"/>
      </Entry.Behaviors>
    </Entry>
    <Entry Text="{Binding StatusMessage, Mode=TwoWay}">
      <Entry.Behaviors>
        <behaviors:EntryLengthClamp 
          MaxLength="{x:Static helpers:Settings+UserConventions.StatusMessageMaxLength}" />
      </Entry.Behaviors>
    </Entry>
    <Button Text="Change" Command="{Binding UpdateCommand}" />
  </StackLayout>
</ContentPage>